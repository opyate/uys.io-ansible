description "App server for SOAPBOX"                                                                                                                                 
start on runlevel [2345]
stop on runlevel [!2345]
 
respawn
 
script
    cd "{{soapbox_install_dir}}"
    exec gunicorn -w 1 -b 127.0.0.1:{{soapbox_port}} soapbox:app  ## execute by init daemon.
end script
